@model WebNongSan.Model.TAIKHOAN
@{
    ViewBag.Title = "DangKi";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";


}
@Styles.Render("~/Content/dangky.css")
<div style=" margin-top:150px">

    <!--  <form class="Register">  Register-->
    <div class="Register">
        @using (Html.BeginForm(FormMethod.Post))
        {
            <h1>Register</h1>
            <p>Please fill in this form to create an account.</p>
            @Html.AntiForgeryToken()
            <hr><!--chia đường gạch ngang    class="Register-1"-->
            <div class="Register-1">

                <div>

                    @Html.EditorFor(model => model.TENKH, new { htmlAttributes = new { @id = "user", @name = "user", @placeholder = "Nhập tên đăng nhập" } })
                    <br />
                    @Html.ValidationMessageFor(model => model.TENKH, "", new { @class = "text-danger" })


                </div>


                <div class="psw">

                    @Html.EditorFor(model => model.MK, new { htmlAttributes = new { @type = "password", @id = "psw", @name = "psw", @placeholder = "Enter Password" } })
                    <br />
                    @Html.ValidationMessageFor(model => model.MK, "", new { @class = "text-danger" })
                </div>

                <div class="psw-repeat">

                    @Html.EditorFor(model => model.XACNHANMATKHAU, new { htmlAttributes = new { @type = "password", @id = "psw-repeat", @name = "psw-repeat", @placeholder = "Repeat Password" } })
                    <br />

                    @Html.ValidationMessageFor(model => model.XACNHANMATKHAU, "", new { @class = "text-danger" })
                </div>

                <div class="email">
                    @Html.EditorFor(model => model.EMAIL, new { htmlAttributes = new { @id = "email", @name = "email", @placeholder = "Enter Email" } })
                    <br />
                    @Html.ValidationMessageFor(model => model.EMAIL, "", new { @class = "text-danger" })

                    @if (ViewBag.error != null)
                    {
                        <span class="text-danger"> @ViewBag.error</span>
                    }
                </div>

                <div class="phone">
                    @Html.EditorFor(model => model.SDT, new { htmlAttributes = new { @id = "phone", @name = "phone", @placeholder = "Phone" } })
                    <br />
                    @Html.ValidationMessageFor(model => model.SDT, "", new { @class = "text-danger" })
                </div>

            </div>


            <hr>
            <div class="Terms">
                <p>By creating an account you agree to our <a href="#">Terms & Privacy</a>.</p>
                <input type="submit" class="registerbtn" value="Register" />

            </div>


        }

        <div class="container-signin">
            <p>Already have an account? <a href="@Url.Action("Dangnhap","User")">Sign in</a>.</p>
        </div>

    </div>
    <!--   </form> --><!--het-Register-->



</div>
